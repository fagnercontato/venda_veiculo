generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Venda {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  cpf         String
  dataVenda   DateTime
  idTabelaVeiculo String   @db.ObjectId
  cpfComprador String
  valorVenda  Float
  createdAt   DateTime @default(now())
  processado Boolean @default(false)
  dataProcessamento   DateTime @updatedAt
  @@map("vendas")
}